json = """
{
  "pipeline":[
    {
      "type":"filters.reprojection",
      "out_srs":"EPSG:32611"
    },
    {
      "type":"filters.assign",
      "assignment":"Classification[:]=0"
    },
    {
      "type":"filters.elm"
    },
    {
      "type":"filters.outlier"
    },
    {
      "type":"filters.smrf",
      "last":true,
      "ignore":"Classification[7:7]",
      "slope":0.2,
      "window":16,
      "threshold":0.45,
      "scalar":1.2
    },
    {
      "type":"filters.range",
      "limits":"Classification[2:2]"
    },
    {
      "gdaldriver":"GTiff",
      "output_type":"all",
      "resolution":"1.0",
      "data_type":"float",
      "type": "writers.gdal",
      "radius": 0.5,
      "filename":"NEON_TEAK_DTM.tif"
    }
  ]
}"""

import pdal
pipeline = pdal.Pipeline(json)
pipeline.validate()
pipeline.execute